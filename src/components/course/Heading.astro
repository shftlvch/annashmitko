---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1" | "h2" | "h3"> {
  level: "h1" | "h2" | "h3";
}

const { level, class: className, ...props } = Astro.props;

const styles = {
  h1: "text-4xl md:text-6xl font-bold font-serif leading-mid",
  h2: "text-3xl md:text-4xl font-bold font-serif leading-mid",
  h3: "text-2xl md:text-3xl font-bold font-serif leading-mid",
};

const Tag = level as keyof typeof styles;
---

<Tag class:list={[styles[level], className]} {...props}>
  <slot />
</Tag>
